<!DOCTYPE html>
<html>

<head>
    <title>Liste des animaux</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style/style.css">
</head>

<body>

{% include 'nav.twig' %}
    <div class="container">

        <h3 id="student-list-title"></h3>
        <div>
            <div style=" float:right"><a class="btn-add" href="/animal/create">Ajouter un animal</a> </div>
            <table class="students-table">
                <tr>
                     <th>ID</th>
            <th>Type</th>
            <th>Âge</th>
            <th>Santé</th>
              <th>Equipement</th>
                    <th>Actions</th>


                </tr>

                 {% for animal in animals %}
                    <tr class="student-info">
                          <td>{{ animal.id }}</td>
                <td>{{ animal.type }}</td>
                <td>{{ animal.age }}</td>
                <td>{{ animal.sante }}</td>
                <td>{{ animal.equipmentName }}</td>
                        <td>
                            <a class="btn btn-secondary" href="/animal/edit/{{ animal.id }}">Modifier</a> --|-- <a class="btn btn-cancel" href="/animal/delete/{{ animal.id }}" onclick="return confirm('Êtes-vous sûr ?');">Supprimer</a>

                        </td>
                    </tr>
            {% endfor %}
            </table>
        </div>
    </div>
    <script src="js/scp.js"></script>
</body>

</html>